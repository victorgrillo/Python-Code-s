item = input("What item would you like to buy?:  ") <br/>
price = float(input("What is the price?: "))  <br/>
quantity = int(input("How many would you like to buy?: "))  <br/>

total = price * quantity  <br/>

print(f"You have bought {quantity} x {item}/s")  <br/>
print(f"Your total is: ${total}")  <br/>
